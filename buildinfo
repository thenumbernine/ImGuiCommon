	dynamicLibs:append{cwd..'/lib/cimgui.lib', 'user32.lib', 'imm32.lib'}

	macros:append{
		'IMGUI_IMPL_API=extern "C" __declspec(dllexport)',
	}
elseif platform == 'linux' then
	-- same as addDependLib
	libs:insert'cimgui_sdl'
	--libpaths:insert(cwd..'/lib/')
	if including then
		--env:addDependLib('cimgui_sdl', cwd..'/lib/')
		--dependLibs:insert(cwd..'/lib/'..libPrefix..'cimgui_sdl'..libSuffix)
	end
	
	macros:append{
		'IMGUI_IMPL_API=extern "C" ',
	}
end
