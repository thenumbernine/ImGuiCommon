	'IMGUI_DISABLE_OBSOLETE_FUNCTIONS=1',
	
	-- with this, it's finding duplicate defs of ImS64 from ImGuiCommon.h => imgui_impl_sdl.h => imgui.h ...
	-- without this, it gets errors in cimgui.h ...
	--'CIMGUI_DEFINE_ENUMS_AND_STRUCTS',
}
